                    alt="Third slide"
                    width="300"
                    height="200"
                  />
                  <div class="my-carousel-caption d-none d-md-block">
                    <h5 class="font-weight-bold caption-name">
                      Connect with Anyone
                    </h5>
                    <p class="caption-description">
                      connect and chat with anyone, no prior contact <br />
                      (e.g. Phone Number <br />, e-mail, etc.) needed
                    </p>
                  </div>
                </div>
              </div>
              <ol class="carousel-indicators auth-indicators">
                <li
                  data-target="#carouselExampleIndicators"
                  data-slide-to="0"
                  class="active"
                ></li>
                <li
                  data-target="#carouselExampleIndicators"
                  data-slide-to="1"
                ></li>
                <li
                  data-target="#carouselExampleIndicators"
                  data-slide-to="2"
                ></li>
              </ol>
            </div>
          </div>
          <div class="right-side">
            <div class="right-head">
              <div class="form-container">
                <div class="row pb-4">
                  <div class="col-lg-12">
                    <h5 class="form-header">Sign Up</h5>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-container">
              <form class="form-group" method="POST" action="/createuser">
                <div class="row">
                  <div class="col-lg-12">
                    <label for="username" class="mt-4">UserName:</label>
                    <input
                      type="text"
                      class="form-control"
                      placeholder="UserName"
                      name="username"
                      required
                      oninvalid="this.setCustomValidity('Please Enter username')"
                      oninput="this.setCustomValidity('')" 
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <label for="email">Email Address:</label>
                    <input
                      type="email"
                      class="form-control"
                      placeholder="E.g example@gmail.com"
                      name="email"
                      required
                      oninvalid="this.setCustomValidity('Email Address Is Important')"
                      oninput="this.setCustomValidity('')" 
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <label for="gender">Gender</label>
                    <select class="form-control" name="gender">
                      <option>Male</option>
                      <option>Female</option>                      
                    </select>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <label for="dob">Date Of Birth</label>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <input class="form-control" placeholder="dd-mm-yyyy" type="date" name="dob" required oninvalid="this.setCustomValidity('Please select date of birth')"  oninput="this.setCustomValidity('')" />
                  </div>
