                      <option>1997</option>
                    </select>
                  </div> -->
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <label for="username">Create Password</label>
                    <input
                      type="password"
                      class="form-control"
                      placeholder="Password"
                      name="password"
                      required
                      oninvalid="this.setCustomValidity('Please input password')"
                      oninput="this.setCustomValidity('')" 
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <label for="username">Confirm Password</label>
                    <input
                      type="password"
                      class="form-control"
                      placeholder="Retype Password"
                      name="confirm"
                      required
                      oninvalid="this.setCustomValidity('Please confirm password')"
                      oninput="this.setCustomValidity('')" 
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <button class="form-btn" >CONTINUE</button>
                  </div>
                </div>
              </form>
              <p class="font-weight-bold f-12 text-center">
                Already have an account?
                <a href="/login" class="maroon-text">Sign In</a>
              </p>
              <div class="text-center">
                <a class="f-12 grey-text" href="#"
                  >By signing up you agree to our Privacy Policy and Terms.</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

